{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "solid",
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:solid/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "no-unused-vars": "error",
    "semi": [
      "error",
      "never"
    ],
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "object-curly-spacing": [
      2,
      "never"
    ],
    "quote-props": [
      "error",
      "as-needed"
    ]
  }
}